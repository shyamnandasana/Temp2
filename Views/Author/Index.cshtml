@model List<AuthorModel>

@{
    ViewData["Title"] = "Authors List";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
         <h2 class="mb-0 ">Author List</h2>
        <div class="custom-search-bar d-none d-md-block w-50 position-relative">
            <input type="text" class="form-control ps-4" placeholder="Search...">
            <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ps-2 text-muted"></i>
        </div>
         <a asp-action="AddEdit" asp-controller="Author" class="btn btn-success ">Add New Author</a>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Author ID</th>
                <th>Author Name</th>
                <th>User Name</th>
                <th>Created At</th>
                <th>Modified At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var author in Model)
                {
                    <tr>
                        <td>@author.AuthorId</td>
                        <td>@author.Name</td>
                        <td>@author.FullName</td>
                        <td>@(author.CreatedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>@(author.ModifiedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <a asp-action="AddEdit" asp-route-id="@author.AuthorId" class="btn btn-sm btn-primary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@author.AuthorId"
                               onclick="return confirm('Are you sure you want to delete this author?');"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No authors found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
