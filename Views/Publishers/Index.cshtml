@model List<PublisherModel>

@{
    ViewData["Title"] = "Publishers List";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 ">Publisher List</h2>
        <a asp-action="AddEdit" asp-controller="Publishers" class="btn btn-success">Add New Publisher</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Publisher ID</th>   
                <th>Publisher Name</th>
                <th>User Name</th>
                <th>Created At</th>
                <th>Modified At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var publisher in Model)
                {
                    <tr>
                        <td>@publisher.PublisherId</td>
                        <td>@publisher.Name</td>
                        <td>@publisher.FullName</td>
                        <td>@(publisher.CreatedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>@(publisher.ModifiedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <a asp-action="AddEdit" asp-route-id="@publisher.PublisherId" class="btn btn-sm btn-primary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@publisher.PublisherId"
                               onclick="return confirm('Are you sure you want to delete this publisher?');"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No publishers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
