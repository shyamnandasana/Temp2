@model List<CategoryModel>

@{
    ViewData["Title"] = "Categories List";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 ">Category List</h2>
        <a asp-action="AddEdit" asp-controller="Category" class="btn btn-success ">Add New Category</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>User Name</th>
                <th>Created At</th>
                <th>Modified At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>@category.Description</td>
                        <td>@category.FullName</td>
                        <td>@(category.CreatedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>@(category.ModifiedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <a asp-action="AddEdit" asp-route-id="@category.CategoryId" class=" btn btn-sm btn-primary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.CategoryId"
                               onclick="return confirm('Are you sure you want to delete this category?');"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>