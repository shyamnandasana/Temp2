@model List<BookModel>

@{
    ViewData["Title"] = "Book List";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 text-gradient">
                <i class="fas fa-book me-2"></i>Books Management
            </h1>
            <p class="text-muted mb-0">Manage your book inventory and catalog</p>
        </div>
        <div class="d-flex gap-2">
        <a asp-action="AddEdit" asp-controller="Book" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Book
        </a>
            <button class="btn btn-secondary">
                <i class="fas fa-download me-2"></i>Export
            </button>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Books Table Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>All Books
            </h5>
            <div class="d-flex align-items-center gap-3">
                <div class="position-relative">
                    <input type="text" class="form-control form-control-sm" placeholder="Search books..." style="padding-left: 35px; width: 250px;">
                    <i class="fas fa-search position-absolute top-50 start-0 translate-middle-y ps-3 text-muted"></i>
                </div>
                <select class="form-select form-select-sm" style="width: auto;">
                    <option>All Categories</option>
                    <option>Fiction</option>
                    <option>Non-Fiction</option>
                    <option>Science</option>
                </select>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
            <thead class="table-dark">
                <tr>
                        <th><i class="fas fa-barcode me-2"></i>ISBN</th>
                        <th><i class="fas fa-book me-2"></i>Title</th>
                        <th><i class="fas fa-user me-2"></i>User</th>
                        <th><i class="fas fa-pen-fancy me-2"></i>Author</th>
                        <th><i class="fas fa-building me-2"></i>Publisher</th>
                        <th><i class="fas fa-language me-2"></i>Language</th>
                        <th><i class="fas fa-tags me-2"></i>Category</th>
                        <th><i class="fas fa-dollar-sign me-2"></i>Price</th>
                        <th><i class="fas fa-boxes me-2"></i>Stock</th>
                        <th style="min-width: 150px;"><i class="fas fa-cogs me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                                <td>
                                    <span class="badge bg-light text-dark">@item.Isbn</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary rounded me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; min-width: 40px;">
                                            <i class="fas fa-book text-white"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@item.Title</h6>
                                            <small class="text-muted">ID: @item.BookId</small>
                                        </div>
                                    </div>
                                </td>
                            <td>@item.FullName</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle text-muted me-2"></i>
                                        @item.AuthorName
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-building text-muted me-2"></i>
                                        @item.PublisherName
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.LanguageName</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.CategoryName</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@item.Price?.ToString("C")</span>
                                </td>
                                <td>
                                    @if (item.Stock > 10)
                                    {
                                        <span class="badge bg-success">@item.Stock</span>
                                    }
                                    else if (item.Stock > 0)
                                    {
                                        <span class="badge bg-warning">@item.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </td>
                            <td>
                                    <div class="d-flex gap-2">
                                    <a asp-action="AddEdit" asp-route-id="@item.BookId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a asp-action="DeleteBook" asp-route-id="@item.BookId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure to delete this book?');">
                                            <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                            <td colspan="10" class="text-center py-5">
                                <i class="fas fa-book-open text-muted mb-3" style="font-size: 3rem;"></i>
                                <h5 class="text-muted">No books found</h5>
                                <p class="text-muted mb-3">Start by adding your first book to the catalog</p>
                                <a asp-action="AddEdit" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Add First Book
                                </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
